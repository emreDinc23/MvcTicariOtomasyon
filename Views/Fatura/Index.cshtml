@using ProjeOkul.Models.Sınıflar
@model List<Faturalar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered " style="margin-top:20px">
    <tr>

        <th>Seri & Sıra No</th>
       
        <th>Tarih & Saat</th>
        
        <th>Toplam ₺</th>
        <th>Güncelle</th>
        <th>Detaylar</th>    
        <th>Yeni Kalem</th>




    </tr>
    @foreach (var k in Model)
    {

<tr>

    <td> @k.FaturaSeriNo @k.FaturaSıraNO</td>
    
    <td> @k.FaturaTarih.ToShortDateString() @k.Saat</td>
    
    <td> @k.Toplam ₺</td>



    <td style="text-align:center"><a href="/Fatura/FaturaGetir/@k.Faturaid " class="btn btn-default bg-info">Güncelle</a></td>
    <td style="text-align:center"><a href="/Fatura/FaturaDetay/@k.Faturaid " class="btn btn-default bg-danger">Detaylar</a></td>
    
    <td style="text-align:center"><a href="/Fatura/FaturaDetay/@k.Faturaid " class="btn btn-default " style="background-color:blueviolet;color:white">Yeni </a></td>

</tr>

    }
</table>
<a href="/Fatura/FaturaEkle" class="btn btn-info">Yeni Fatura Girişi</a>
<br /><br />
<button type="button"class="btn btn-outline-success"data-toggle="modal" data-target="#Modal1" >Popup Penceresi</button>
<div class="modal"id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Popup Diyalog Ekranı</h2>
            </div>
            <div class="modal-body">
                <table class="table table-hover table-bordered">
                    <tr>
                        <td>Seri No</td>
                        <td>Sıra No</td>
                        <td>Tutar</td>

                    </tr>
                    @foreach (var x in Model)
            {
                <tr>
                    <td>@x.FaturaSeriNo</td>
                    <td>@x.FaturaSıraNO</td>
                    <td>@x.Toplam</td>

                </tr>
            }
                </table>
                <button class="btn btn-danger" data-dismiss="modal">Tamam</button>
            </div>
        </div>
    </div>
</div>
